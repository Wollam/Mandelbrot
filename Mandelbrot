from tkinter import Frame, Label
from PIL.ImageDraw import Draw
from PIL.ImageTk import PhotoImage
from PIL import Image
import math

# Formule voor 1 punt
def Mandelbrot():
    print("Wat is x:")
    x = float(input())
    print ("Wat is y:")
    y = float(input())
    print ("Maximaal aantal herhalingen:")
    herhalingen = int(input())
    a = x
    b = y
    mandelgetal = 1
    while ((math.sqrt(a*a + b*b)) < 2):
        c = a
        d = b 
        a = (c*c) - (d*d) + x
        b = (c*d*2) + y
        mandelgetal = mandelgetal + 1
        if mandelgetal == herhalingen:
            break          
    return mandelgetal
        
print(Mandelbrot())
